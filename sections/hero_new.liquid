<div class="hero_new">
  <div class="content">
      <h2 class="title">
          {{ section.settings.title }}
      </h2>
      <p class="sub_title">
        {{ section.settings.subtitle }}
      </p>
      <a class="cta_button" href="{{ section.settings.ctaurl }}">
        {{ section.settings.ctatext }}
      </a>
  </div>
</div>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap');
  * {
      padding: 0;
      margin: 0;
  }
  .hero_new {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-size: cover;
      background-image: url("{{ section.settings.image | img_url: 'master' }}");
  }

  @media screen and (max-width: 768px){
    .hero_new {
      background-image: url("{{ section.settings.image_mobile | img_url: 'master' }}");
    }
  }


  .hero_new .content {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
  }

  {% if section.settings.hero_layout == 'Left' %}
      .hero_new .content {
          align-items: flex-start;
          padding: 90px;
          width: 810px;
      }

      .hero_new {
          justify-content: flex-start;
      }

      .hero_new .content .sub_title, .hero_new .content .title {
          width: 100% !important;
          text-align: left !important;
      }
  {% endif %}

  
  {% if section.settings.hero_layout == 'Right' %}
    .hero_new .content {
        align-items: flex-start;
        margin-left: auto;
        width: 610px;
    }

    .hero_new .content .sub_title, .hero_new .content .title {
        width: 100% !important;
        text-align: left !important;
    }
  {% endif %}

  {% if section.settings.hero_layout == 'Center' %}
    .hero_new .content .sub_title, .hero_new .content .title {
      text-align: center !important;
    }
  {% endif %}



  .hero_new .content .title {
      color: {{ section.settings.textColor }};
      font-family:  Roboto;
      font-weight: 700;
      font-size: 46px;
      text-align: center;
      text-transform: unset;
  }

  .hero_new .content .sub_title {
      color: {{ section.settings.textColor }};
      font-family:  Roboto;
      font-weight: 300;
      font-size: 24px;
      text-align: justify;
      width: 61.5%;
      line-height: 40px;
  }

  .hero_new .content .cta_button{
      color: {{ section.settings.buttontextColor }};
      background-color: {{ section.settings.buttonbgColor }};
      font-family:  Roboto Light 300;
      font-size: 20px;
      transition: all .5s;
      width: 180px;
      height: 50px;
      border-radius: 30px;
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      text-transform: uppercase;
      margin-top: 20px;
  }

  .hero_new .content .cta_button:link {
      text-decoration: none;
  }

  .hero_new .content .cta_button:hover {
      color: {{ section.settings.buttonbgColor }};
      background-color: {{ section.settings.buttontextColor }};
  }

  @media screen and (max-width: 768px){
      .hero_new .content .title { 
          font-size: 36px;
          text-align: center !important;
      }

      .hero_new .content .sub_title { 
          font-size: 18px;
          text-align: center !important;
          line-height: 30px;
      }

      .hero_new .content {
          align-items: center;
          margin-left: auto;
          width: 100%;
          padding: 0;
      }

      .hero_new .content .sub_title, .hero_new .content .title {
          width: 90% !important;
          
      }

  }
</style>

